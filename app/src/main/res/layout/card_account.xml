<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="8dp"
    android:paddingVertical="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/accounts_bg"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textViewSerialNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="1."
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto"
            android:text="Eye Operation"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/textViewSerialNo"
            app:layout_constraintStart_toEndOf="@id/textViewSerialNo"
            app:layout_constraintTop_toTopOf="@id/textViewSerialNo" />

        <TextView
            android:id="@+id/textViewNetBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Net Balance:"
            android:gravity="bottom"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/textViewSerialNo"
            app:layout_constraintTop_toBottomOf="@id/textViewSerialNo" />

        <TextView
            android:id="@+id/textViewWithdrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Withdrawable :"
            android:gravity="bottom"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/textViewNetBalance"
            app:layout_constraintTop_toBottomOf="@id/textViewNetBalance" />

        <TextView
            android:id="@+id/netBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="7000"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/textViewNetBalance"
            app:layout_constraintStart_toStartOf="@id/withdrawable"
            app:layout_constraintTop_toTopOf="@id/textViewNetBalance" />

        <TextView
            android:id="@+id/withdrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto"
            android:text="2000"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/textViewWithdrawable"
            app:layout_constraintStart_toEndOf="@id/textViewWithdrawable"
            app:layout_constraintTop_toTopOf="@id/textViewWithdrawable" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="Deposit"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/quicksand"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_custom"
            app:layout_constraintBottom_toBottomOf="@id/netBalance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/netBalance"
            app:layout_constraintTop_toTopOf="@id/netBalance" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:text="Withdraw"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/quicksand"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_custom"
            app:layout_constraintBottom_toBottomOf="@id/withdrawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/withdrawable"
            app:layout_constraintTop_toTopOf="@id/withdrawable" />

        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:textSize="12sp"
            android:layout_marginRight="16dp"
            android:textColor="#000000"
            android:text="Tap For Details>>>"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
